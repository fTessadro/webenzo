---
const phone = "+5492216720937"; // Cambia por tu número
const message = "Hola!%20Quiero%20más%20información.";
---

<style>
  .whatsapp-btn {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 54px;
    height: 54px;
    background-color: #25d366;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26px;
    color: white;
    text-decoration: none;
    box-shadow: 0 3px 10px rgba(0,0,0,0.2);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    z-index: 9999;
  }

  .whatsapp-btn:hover {
    transform: scale(1.07);
    box-shadow: 0 4px 14px rgba(0,0,0,0.25);
  }
</style>

<a
  href={`https://wa.me/${phone}?text=${message}`}
  target="_blank"
  rel="noopener noreferrer"
  class="whatsapp-btn"
  aria-label="Contactar por WhatsApp"
>
  <!-- Ícono minimalista (SVG) -->
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="28"
    height="28"
    fill="white"
    viewBox="0 0 24 24"
  >
