---
const year = new Date().getFullYear();
---

<footer class="bg-[#1A476A] text-white mt-20 rounded-t-[4.5rem]">
  <div
    class="max-w-6xl mx-auto px-6 py-12 flex flex-col md:flex-row justify-between items-center md:items-start gap-8"
  >
    <!-- LOGO -->
    <a
      href={import.meta.env.BASE_URL}
      class="flex flex-col items-center mb-4 md:mb-0"
    >
      <img
        src={`${import.meta.env.BASE_URL}favicon.png`}
        alt="Logo"
        class="w-16 h-16 mb-2"
      />
    </a>

    <!-- Enlaces Rápidos -->
    <div class="flex space-x-6 mb-4 md:mb-0">
      <a
        href={`${import.meta.env.BASE_URL}#inicio`}
        class="hover:text-green-300 font-bold transition">Inicio</a
      >
      <a
        href={`${import.meta.env.BASE_URL}#nosotros`}
        class="hover:text-green-300 font-bold transition">Nosotros</a
      >
      <a
        href={`${import.meta.env.BASE_URL}#blog`}
        class="hover:text-green-300 font-bold transition">Tratamientos</a
      >
      <a
        href={`${import.meta.env.BASE_URL}#donde-estamos`}
        class="hover:text-green-300 font-bold transition">Dónde estamos</a
      >
    </div>

    <!-- REDES SOCIALES -->
    <div class="flex flex-col items-center md:items-start">
      <div class="flex gap-4 justify-center md:justify-start cursor-pointer">
        <!-- Ig -->
        <a
          href="#"
          class="text-white hover:text-gray-300 transition"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            class="fill-current"
          >
            <path
              d="M7 2C4.243 2 2 4.243 2 7v10c0 2.757 2.243 5 5 5h10c2.757 0 5-2.243 5-5V7c0-2.757-2.243-5-5-5H7zm10 2c1.654 0 3 1.346 3 3v10c0 1.654-1.346 3-3 3H7c-1.654 0-3-1.346-3-3V7c0-1.654 1.346-3 3-3h10zm-5 3a5 5 0 100 10 5 5 0 000-10zm0 2a3 3 0 110 6 3 3 0 010-6zm4.5-.75a1.25 1.25 0 11-2.5 0 1.25 1.25 0 012.5 0z"
            ></path>
          </svg>
        </a>

        <!-- Facebook -->
        <a href="#" class="text-white hover:text-gray-300 transition">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            class="fill-current"
          >
            <path
              d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div
    class="border-t border-white mt-6 pt-4 text-center text-sm text-gray-300"
  >
    © {year} Your Company — All rights reserved.
  </div>
</footer>
