---
const { employee } = Astro.props;
---

<article
    class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-lg transition flex flex-col h-full"
>
    <div class="h-64 overflow-hidden">
        <img
            src={employee.image}
            alt={employee.name}
            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
        />
    </div>

    <div class="p-6 flex flex-col flex-grow">
        <h3 class="text-xl font-bold text-[#1A476A] mb-1">
            {employee.name}
        </h3>
        <p
            class="text-[#2F855A] font-semibold text-sm mb-3 uppercase tracking-wide"
        >
            {employee.role}
        </p>
        <p class="text-gray-600 text-sm leading-relaxed">
            {employee.description}
        </p>
    </div>
</article>
